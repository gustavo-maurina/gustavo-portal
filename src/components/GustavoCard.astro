---
import Description from "./Description.astro";
import RoundedGustavoImage from "./RoundedGustavoImage.astro";

---

<style>
  .card-description {
    background-color: #0a0a0a;
    @apply flex flex-col lg:flex-row w-[90vw] lg:w-fit justify-center
    items-center gap-8 p-8 rounded-xl max-w-[800px] text-center border
    border-gray-700 h-fit;
  }


</style>

<div class="card-description">
  <div class="lg:w-2/5 grid place-items-center gap-6">
    <h1 class="text-2xl font-bold">
      Gustavo Farias Maurina
    </h1>
    <RoundedGustavoImage />

  </div>
<div class="lg:w-3/5 grid place-items-center gap-8 h-full">
  <Description />

</div>
</div>